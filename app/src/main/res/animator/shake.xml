    <translate
        android:startOffset="180"
        android:fromXDelta="0%p"
        android:toXDelta="2.5%p"
        android:duration="65" />


    <translate
        android:startOffset="245"
        android:fromXDelta="0%p"
        android:toXDelta="-2.0%p"
